{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "CPU_HOST BUILD FOR VSCODE",
            //"command": "/opt/nvidia/hpc_sdk/Linux_x86_64/24.5/compilers/bin/pgc++",
            "command": "pgc++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-fopenmp",
                "-acc",
                "-acc=host",
                "-Minfo=all",
                "-lboost_program_options"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "CPU_HOST BUILD FOR VSCODE"
        },

